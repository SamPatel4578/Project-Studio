<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Cart</title>
    <style>
        body {
            background-image: url('https://img.freepik.com/premium-photo/food-cart-with-black-background-black-background_916191-1798.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            position: relative;
            z-index: 0;
        }

            /* Dark overlay on the body */
            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.1); /* 50% opacity dark overlay */
                z-index: -1;
            }

        .cart-container {
            margin-top: 150px;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.5); /* Slightly more opaque background */
            padding: 20px;
            border-radius: 10px;
            color: white;
        }

        .cart-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #dee2e6;
            padding-top: 20px;
        }

            .cart-item img {
                width: 100px;
                border-radius: 5px;
            }

        .cart-total {
            font-size: 20px;
            font-weight: bold;
            color: #28a745;
            text-align: left;
        }

        .quantity-box {
            display: flex;
            align-items: center;
        }

            .quantity-box input {
                text-align: center;
                width: 50px;
                margin: 0 10px;
            }

            .quantity-box button {
                padding: 5px;
                background-color: dodgerblue;
                color: white;
                border: none;
                cursor: pointer;
            }

        .delete-btn {
            background-color: red;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

        .button-group {
            display: flex;
            justify-content: space-between;
            margin-top: 50px;
        }

            .button-group .btn {
                padding: 15px 35px 15px 35px;
                width: 45%;
                text-align: center;
                background-color: dodgerblue;
                color: white;
                font-size: 18px;
                border: none;
                cursor: pointer;
            }

                .button-group .btn:hover {
                    background-color: #0056b3;
                }

        .address-input {
            display: none;
            margin-top: 10px;
        }

            .address-input input {
                width: 100%;
                padding: 10px;
                margin-top: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }
    </style>
    <script>
        let deliveryCharge = 10.00;
        let isDelivery = false;

        function loadCart() {
            let cart = JSON.parse(sessionStorage.getItem('cart')) || [];
            let cartItemsContainer = document.getElementById('cartItems');
            let total = 0;

            cartItemsContainer.innerHTML = '';

            if (cart.length === 0) {
                document.getElementById('totalPrice').innerText = `Total: $0.00`;
                return;
            }

            cart.forEach((item, index) => {
                let cartItem = document.createElement('div');
                cartItem.className = 'cart-item';
                cartItem.innerHTML = `
                                            <img src="${item.imageUrl}" alt="${item.name}">
                                            <span>${item.name}</span>
                                            <div class="quantity-box">
                                                <button onclick="decreaseQuantity(${index})">-</button>
                                                <input type="number" id="qty-${index}" value="${item.qty}" min="1" readonly>
                                                <button onclick="increaseQuantity(${index})">+</button>
                                            </div>
                                            <span id="price-${index}">$${(item.price * item.qty).toFixed(2)}</span>
                                            <button class="delete-btn" onclick="deleteItem(${index})">DELETE</button>
                                        `;
                cartItemsContainer.appendChild(cartItem);
                total += parseFloat(item.price * item.qty);
            });

            if (isDelivery) {
                total += deliveryCharge;
            }

            document.getElementById('totalPrice').innerText = `Total: $${total.toFixed(2)}`;

            sessionStorage.setItem('cartTotalAmount', total.toFixed(2));
        }

        function increaseQuantity(index) {
            let cart = JSON.parse(sessionStorage.getItem('cart'));
            cart[index].qty += 1;
            sessionStorage.setItem('cart', JSON.stringify(cart));
            updateCartDisplay();
        }

        function decreaseQuantity(index) {
            let cart = JSON.parse(sessionStorage.getItem('cart'));
            if (cart[index].qty > 1) {
                cart[index].qty -= 1;
                sessionStorage.setItem('cart', JSON.stringify(cart));
                updateCartDisplay();
            }
        }

        function deleteItem(index) {
            let cart = JSON.parse(sessionStorage.getItem('cart'));
            cart.splice(index, 1);
            sessionStorage.setItem('cart', JSON.stringify(cart));
            updateCartDisplay();
        }

        function updateCartDisplay() {
            loadCart();
        }

        function selectPickup() {
            isDelivery = false;
            document.getElementById('addressContainer').style.display = 'none';
            loadCart();
            alert('You have selected Pick-Up. Please pick your food in 20 minutes.');
        }

        function selectDelivery() {
            isDelivery = true;
            document.getElementById('addressContainer').style.display = 'block';
            loadCart();
        }

        window.onload = loadCart;

        function clearFuelTotal() {
            sessionStorage.removeItem('fuelTotalAmount');
        }
    </script>
</head>
<body>
    <div class="cart-container">
        <h1>Your Cart</h1>
        <div id="cartItems"></div>
        <a class="cart-total btn btn-primary" style="float: right; color: white; margin-top:20px;" href="/Home/FoodMenu">Back to Menu</a>
        <div class="" style="text-align:left; padding-top:20px;" id="">Delivery Charge: $10.00</div>
        <div class="cart-total" style="padding-top: 5px; max-width:150px;" id="totalPrice">Total: $0.00</div>

        <div class="button-group">
            <button class="btn" onclick="selectPickup()">Pick-Up</button>
            <button class="btn" onclick="selectDelivery()">Delivery</button>
        </div>

        <br />

        <form action="/Home/Payment" method="GET" onsubmit="clearFuelTotal()">
            <input type="hidden" name="paymentType" value="cart">
            <div class="address-input" id="addressContainer">
                <label for="address">Enter your address for delivery:</label>
                <input type="text" id="address" name="address" placeholder="Your address...">
            </div>

            <br />
            <br />

            <button type="submit" class="btn btn-secondary" style="padding:20px 580px 20px 580px; font-size: 18px;">
                Checkout
            </button>
        </form>
    </div>
</body>
</html>
