@model IEnumerable<UTR_WebApplication.Models.FuelSupplier>

@{
    ViewBag.HideFooter = true;
}

@{
    ViewBag.Title = "Fuel Suppliers";
}

<div class="container mt-5">
    <h1 class="text-center my-4" style="color:black; background-color: rgba(242, 242, 242, 0.8); padding-top: 20px; padding-bottom: 20px;"><b>Fuel Suppliers</b></h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var supplier in Model)
        {
            <div class="col">
                <div class="card h-100 text-center">
                    <div class="d-flex justify-content-center align-items-center" style="height: 200px;">
                        <img src="@supplier.ImageUrl" class="card-img-top" alt="@supplier.SupplierName">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@supplier.SupplierName</h5>
                        <label for="fuelType_@supplier.FuelSupplierId" class="form-label">Select Fuel Type:</label>
                        <select id="fuelType_@supplier.FuelSupplierId" class="form-select fuel-type-select">
                            <option value="1.20" data-fuel="Petrol">Petrol - $1.20/L</option>
                            <option value="1.30" data-fuel="Diesel">Diesel - $1.30/L</option>
                            <option value="0.90" data-fuel="Gas">Gas - $0.90/KG</option>
                        </select>
                        <div class="mt-3">
                            <label for="litres_@supplier.FuelSupplierId" class="form-label">Enter Litres:</label>
                            <input type="number" id="litres_@supplier.FuelSupplierId" class="form-control litres-input" placeholder="0">
                        </div>
                        <div class="mt-3">
                            <p style="text-align:center;"><b>Total Amount Due: $<span class="total-amount">0.00</span></b></p>
                        </div>
                        <div class="mt-3">
                            <form action="/Home/Payment" method="get">
                                <input type="hidden" name="totalAmount" class="total-amount-input" value="0.00">
                                <input type="hidden" name="paymentType" value="fuel">
                                <button type="submit" class="btn btn-primary">Checkout</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function calculateTotal(card) {
            const fuelTypeSelect = card.querySelector('.fuel-type-select');
            const pricePerLitre = parseFloat(fuelTypeSelect.value);
            const litresInput = card.querySelector('.litres-input').value;
            const totalAmount = (litresInput * pricePerLitre).toFixed(2);
            card.querySelector('.total-amount').textContent = totalAmount;
            card.querySelector('.total-amount-input').value = totalAmount;

            sessionStorage.setItem('fuelTotalAmount', totalAmount);
        }

        document.querySelectorAll('.fuel-type-select, .litres-input').forEach(input => {
            input.addEventListener('input', function () {
                const card = this.closest('.card');
                calculateTotal(card);
            });
        });
    </script>
}

<style>

    body {
        background-image: url('https://img.freepik.com/premium-photo/bottle-wine-is-poured-into-black-background_771426-7430.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

   
    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: contain; 
        max-width: 200px;
        max-height: 200px;
        margin-right: 50px;
    }

   
    .d-flex {
        height: 200px; 
        justify-content: center;
        align-items: center;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9); 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
</style>
