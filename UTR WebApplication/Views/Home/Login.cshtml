@model UTR_WebApplication.Models.LoginDetail


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="shortcut icon" href="~/logo.ico" type="image/x-icon">
    <title>Login</title>
    <style>
        body {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 0 16px 0 rgba(0, 0, 0, 0.7);
            padding: 50px 40px;
            width: 400px;
            text-align: center;
            position: relative;
            margin-left: 450px;
        }

            .login-container::before {
                content: '';
                position: absolute;
                top: -20px;
                right: -20px;
                bottom: -20px;
                left: -20px;
                border-radius: 15px;
                z-index: -1;
            }

            .login-container h1 {
                margin-bottom: 40px;
                font-size: 28px;
                color: #333;
            }

            .login-container label {
                font-size: 16px;
                color: #555;
                display: block;
                text-align: left;
                margin-bottom: 10px;
            }

            .login-container input {
                width: 100%;
                padding: 12px;
                margin: 10px 0 25px 0;
                border: 1px solid #ddd;
                border-radius: 5px;
                font-size: 16px;
            }

                .login-container input:focus {
                    border-color: black;
                    outline: none;
                    box-shadow: 0 0 8px rgba(78, 84, 200, 0.2);
                }

            .login-container button {
                background-color: gray;
                color: white;
                border: none;
                padding: 15px;
                width: 100%;
                border-radius: 5px;
                font-size: 18px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .login-container button:hover {
                    background-color: black;
                }

            .login-container .forgot-password {
                display: block;
                margin-top: 20px;
                font-size: 14px;
                color: #555;
                text-decoration: none;
            }

                .login-container .forgot-password:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <div class="login-container">
        <h1>LOGIN</h1>
        <form asp-action="Login" asp-controller="Home" method="post">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" placeholder="Enter Email" class="form-control"  required />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="PasswordHash">Password</label>
            <input asp-for="PasswordHash" type="password" placeholder="Enter Password" class="form-control" required />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>

            <button type="submit" class="btn btn-dark">Login</button>
            <a href="#" class="forgot-password">Forgot your password?</a>
        </form>
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
