@model UTR_WebApplication.Models.LoginDetail

@{
    ViewBag.HideFooter = true;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="shortcut icon" href="~/logo.ico" type="image/x-icon">
    <title>Login</title>
    <style>
        body {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-image: url('https://t3.ftcdn.net/jpg/02/94/52/66/240_F_294526635_8Fc9IbBHWOC83JsiFNRNx5VivafEjiyi.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .login-container {
            background-color: transparent; 
            border-radius: 15px;
            box-shadow: 0 0 16px 0 rgba(0, 0, 0, 0.5);
            padding: 50px 40px;
            width: 400px;
            text-align: center;
            position: relative;
            margin-left: 430px;
            margin-top: 200px;
            border: 2px solid white;
        }

            .login-container h1 {
                margin-bottom: 40px;
                font-size: 28px;
                color: white; 
            }

            .login-container label {
                font-size: 16px;
                color: transparent; 
                display: block;
                text-align: left;
                margin-bottom: 10px;
            }

            .login-container input {
                width: 100%;
                padding: 10px;
                margin: 10px 0 25px 0;
                border: 1px solid white;
                border-radius: 5px;
                font-size: 16px;
                background-color: transparent;
                color: white;
            }
                
                .login-container input::placeholder{
                    color: white;
                }

                .login-container input:focus {
                    border-color: black;
                    outline: none;
                    box-shadow: 0 0 8px rgba(78, 84, 200, 0.2);
                }

            .login-container button {
                background-color: gray;
                color: white;
                border: none;
                padding: 15px;
                width: 100%;
                border-radius: 5px;
                font-size: 18px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .login-container button:hover {
                    background-color: black;
                }

            .login-container .forgot-password {
                display: block;
                margin-top: 20px;
                font-size: 14px;
                color: white; 
                text-decoration: none;
            }

                .login-container .forgot-password:hover {
                    text-decoration: underline;
                }

           
    </style>
</head>

<body>
    <div class="login-container">
        <h1>LOGIN</h1>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    
        <form asp-action="Login" asp-controller="Home" method="post">
            <label asp-for="Email" style="color:white;">Email</label>
            <input asp-for="Email" placeholder="Enter Email" class="form-control"  required />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="PasswordHash" style="color:white;">Password</label>
            <input asp-for="PasswordHash" type="password" placeholder="Enter Password" class="form-control" required />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>

            <button type="submit" class="btn btn-dark">Login</button>
            <a href="#" class="forgot-password">Forgot your password?</a>
        </form>
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
