ORDER HISTORY CODE:

@{
    ViewBag.HideFooter = true;
}

<!DOCTYPE html>
<html>
<head>
    <title>Your Previous Orders</title>
    <style>
        .table {
            width: 100%;
            margin: 20px 0;
        }

            .table td, .table th {
                padding: 15px;
                text-align: left;
            }

            .table tr {
                transition: background-color 0.3s;
            }

                .table tr:hover {
                    background-color: #f2f2f2;
                }

            .table img {
                border-radius: 5px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Your Previous Orders</h2>
        <div class="table-responsive">
            <table class="table" style="border-collapse: collapse; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in ViewBag.Orders)

                    {
                        <tr>
                            <td>@order.FoodOrderId</td>
                            <td>@order.ItemName</td>
                            <td>@order.Quantity</td>
                            <td>$@order.Price</td>
                            <td>
                                <img src="@order.ImageUrl" alt="Item Image" style="width: 100px; height: auto;">
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>