@{
    ViewData["Title"] = "Privacy Policy";

    ViewBag.HideFooter = true;
}

@model UTR_WebApplication.Models.PaymentDetail

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .payment-container {
            margin: 35px auto;
            max-width: 600px;
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 16px 0 rgba(0, 0, 0, 0.7);
        }

            .payment-container h2 {
                text-align: center;
                margin-bottom: 20px;
            }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #5a6268;
            border: none;
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }

        .total-amount {
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
            color: green;
        }

        .radio-buttons {
            margin-top: 20px;
        }

            .radio-buttons label {
                margin-right: 20px;
                font-weight: normal;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="payment-container">
            <h2>Payment Form</h2>

            <!-- Total amount display -->
            <div class="total-amount" id="totalAmountDisplay">Total Payment: $0.00</div>

            <form asp-action="ProcessPayment" method="post">

                <div class="form-group">
                    <label for="CardHolderName">Card Holder Name</label>
                    <input type="text" class="form-control" id="CardHolderName" placeholder="Enter Card Holder Name">
                </div>

                <div class="form-group">
                    <label for="CardNumber">Card Number</label>
                    <input type="text" class="form-control" id="CardNumber" placeholder="Enter Card Number" maxlength="16">
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ExpiryDate">Expiry Date</label>
                        <input type="month" class="form-control" id="ExpiryDate">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="CVV">CVV</label>
                        <input type="text" class="form-control" id="CVV" placeholder="Enter CVV" maxlength="3">
                    </div>
                </div>

                <!-- Save payment details radio buttons -->
                <div class="radio-buttons">
                    <label>Save Payment Details for Future Use:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="SavePaymentDetails" id="saveYes" value="yes" checked>
                        <label class="form-check-label" for="saveYes">
                            Yes
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="SavePaymentDetails" id="saveNo" value="no">
                        <label class="form-check-label" for="saveNo">
                            No
                        </label>
                    </div>
                </div>

                <!-- Amount is prefilled and hidden -->
                <input type="hidden" id="Amount" name="Amount" asp-for="Amount">

                <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Submit Payment</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
