<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title UTR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UTR_WebApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="shortcut icon" href="~/logo.ico" type="image/x-icon">

    <style>
        /* Main body styles for full background image */
        body {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-size: cover;
            background-position: center;
        }

        /* Dark semi-transparent navbar for contrast */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding-right: 50px;
            background-color: rgba(0, 0, 0, 0.4); /* Dark background with transparency */
            z-index: 100; /* Ensures navbar stays on top */
        }

        /* Contrast for navbar items */
        .navbar-nav .nav-link {
            color: white !important; /* White text for visibility */
        }

            .navbar-nav .nav-link:hover {
                color: orange !important; /* Light yellow on hover */
            }

        /* Logo with a subtle shadow for visibility */
        img {
            margin-left: 40px;
            width: 100px;
            height: auto;
            padding: 0px;
            filter: drop-shadow(2px 2px 5px rgba(0, 0, 0, 0.7)); /* Drop shadow for better contrast */
        }

        /* Footer adjustments */
        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: transparent;
            padding: 10px 0;
            text-align: center;
            color: white; /* Footer text color for visibility */
        }

        .fa {
            padding: 10px;
            margin: 5px;
            font-size: 30px;
            width: 30px;
            height: auto;
            float: right;
            text-decoration: none;
            border-radius: 20%;
        }

            .fa:hover {
                opacity: 0.7;
                color: white;
            }

        /* Social media icons in footer */
        .fa-facebook {
            background: #3B5998;
            color: white;
        }

        .fa-twitter {
            background: #55ACEE;
            color: white;
        }

        .fa-google {
            background: #dd4b39;
            color: white;
        }

        .fa-instagram {
            background: #f40083;
            color: white;
        }

        .dropdown-menu {
            min-width: 150px;
            width: 150px;
            text-align: center;
        }

        .user-profile-img {
            width: 20px;
            height: 25px;
        }

        .dropdown {
            text-align: center;
        }

        /* Add some padding for the body content so it doesn't go under the fixed navbar */
        .container {
            padding-top: 40px; /* Padding adjusted to avoid overlapping with fixed navbar */
        }

        .crown-img {
            width: 25px;
            height: 30px;
        }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/logo.ico" alt="logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="ml-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CashierDashboard">CashierDashboard</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="OrderHistory">OrderHistory</a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)

                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FoodMenu">FoodMenu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Cart">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Fuel">Fuel</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/user-solid.svg" alt="User" class="user-profile-img" style="margin-left: 5px;"> User Profile
                                    <img src="~/crown-solid.svg" alt="User" class="crown-img" style="margin-left: 5px;">

                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Profile">Profile</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="PaymentDetails">Payment Details</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ViewPointsStatus" asp-route-customerId="@ViewBag.UserId">View My Points</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item btn btn-link" style="color: inherit; text-decoration: none;">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }

                        else

                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="loginDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Login</a>
                                <ul class="dropdown-menu" aria-labelledby="loginDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Login">Customer</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="StaffLogin">Staff</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ManagerLogin">Manager</a></li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="SignUp">SignUp</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewBag.HideFooter == null || ViewBag.HideFooter == false)

    {
        <footer class="footer">
            <div class="container">
                &copy; 2024 - UTR_WebApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a href="#" class="fa fa-twitter"></a>
                <a href="#" class="fa fa-google"></a>
                <a href="#" class="fa fa-instagram"></a>
                <a href="#" class="fa fa-facebook"></a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>